---
import cn from 'clsx';
import { ShareIcon } from '@heroicons/react/outline';
import TechIcon from './TechIcon.astro';
import Breadcrumbs from './Breadcrumbs.astro';
import { GitHubIcon } from '../icons/GitHubIcon.tsx';

const { tech, name, version } = Astro.props;

const crumbs = [
  {
    href: '/',
    title: 'Home',
  },
  {
    title: 'Tech stacks',
  },
];
---

<div class="p-8 bg-gray-100">
  <div class="max-w-screen-2xl mx-auto">
    <Breadcrumbs {crumbs} />
    <div
      class="max-w-screen-xl mx-auto my-5 bg-white border border-gray-200 rounded-lg"
    >
      <div class="flex flex-col items-center justify-between lg:flex-row p-4">
        <div
          class="flex flex-wrap items-center justify-center space-x-3 space-y-3"
        >
          {tech.map(({ name, tags, Icon}, i) => (
            <span class={cn('hidden text-3xl text-gray-300 font-light', i > 0 && 'lg:inline')}>/</span>
            <div class="p-1.5 border border-gray-100 rounded-xl flex items-center justify-center">
              <TechIcon {Icon} />
              <div class="mx-4">
                <h5 class="text-lg text-gray-800 font-semibold leading-snug">{name}</h5>
                <p class="text-sm text-gray-500">{tags.join(', ')}</p>
              </div>
            </div>
          ))}
        </div>
        <div class="flex flex-col space-y-3 my-4">
          <button class="btn text-sm text-white bg-green-600 hover:bg-green-500"
            >Download Kit <GitHubIcon className="ml-2" /></button
          >
          <a class="text-gray-600 hover:text-blue-600 text-sm" href="#"
            ><ShareIcon className="inline w-3.5 h-3.5 mr-1.5" /> Share Starter Kit</a
          >
        </div>
      </div>
      <div class="py-2 px-8 space-x-4 border-t border-gray-100">
        <span class="text-gray-500 text-sm">{name}</span>
        <span class="text-gray-500 text-sm">version {version}</span>
      </div>
    </div>
  </div>
</div>
