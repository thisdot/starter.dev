---
import cn from 'clsx';
import Breadcrumbs from './Breadcrumbs.astro';
import KitActionLinks from './KitActionLinks.astro';
import TechItem from './TechItem.astro';

const { technologies, name } = Astro.props;

const crumbs = [
  {
    href: '/',
    title: 'Home',
  },
  {
    title: 'Kits',
  },
];
---

<div class="p-8 bg-gray-200 dark:bg-gray-800">
  <div class="max-w-screen-2xl mx-auto">
    <Breadcrumbs {crumbs} />
    <div
      class="my-5 bg-white dark:dark-bg border border-gray-400 dark:border-gray-700 rounded-lg"
    >
      <div
        class="flex flex-wrap items-center justify-start space-x-3 space-y-3 p-4"
      >
        {technologies.map((tech, i) => (
            <span class={cn('hidden text-3xl text-gray-300 font-light', i > 0 && 'lg:inline')}>/</span>
            <a href={`/kits-by-tool/${tech.key}`} class="group inline-block my-2">
              <TechItem {...tech} />
            </a>
          ))}
      </div>
      <div
        class="py-4 px-8 space-x-4 border-t border-gray-400 dark:border-gray-700"
      >
        <KitActionLinks {name} inline />
      </div>
    </div>
  </div>
</div>
