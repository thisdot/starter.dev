---
import cn from 'clsx';
import TechIcon from './TechIcon.astro';
import Breadcrumbs from './Breadcrumbs.astro';
import KitActionLinks from './KitActionLinks.astro';

const { tech, name } = Astro.props;

const crumbs = [
  {
    href: '/',
    title: 'Home',
  },
  {
    title: 'Tech stacks',
  },
];
---

<div class="p-8 bg-gray-200">
  <div class="max-w-screen-2xl mx-auto">
    <Breadcrumbs {crumbs} />
    <div class="my-5 bg-white border border-gray-400 rounded-lg">
      <div
        class="flex flex-wrap items-center justify-start space-x-3 space-y-3 p-4"
      >
        {tech.map(({ name, tags, Icon}, i) => (
            <span class={cn('hidden text-3xl text-gray-300 font-light', i > 0 && 'lg:inline')}>/</span>
            <div class="p-1.5 border border-gray-200 rounded-xl flex items-center justify-center">
              <TechIcon {Icon} />
              <div class="mx-4">
                <h5 class="text-lg text-gray-800 font-semibold leading-snug">{name}</h5>
                <p class="text-sm text-gray-500">{tags.join(', ')}</p>
              </div>
            </div>
          ))}
      </div>
      <div class="py-4 px-8 space-x-4 border-t border-gray-400">
        <KitActionLinks {name} inline />
      </div>
    </div>
  </div>
</div>
