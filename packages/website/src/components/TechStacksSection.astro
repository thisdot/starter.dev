---
import KitItem from './KitItem.astro';
import { parseKits } from '../lib/parseKits';
const items = Astro.fetchContent('../pages/kit/*.md');
const kits = parseKits(items);
---

<div class="py-8">
  <h3
    class="text-center text-gray-800 dark:text-gray-50 text-3xl font-semibold"
  >
    Tech Stacks
  </h3>
  <div class="max-w-screen-2xl mx-auto my-12">
    <div class="px-4 grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-6">
      {kits.map((kit) => (
        <div class="col-span-1">
          <KitItem kit={kit} />
        </div>
      ))}
    </div>
  </div>
</div>
