---
import { ArrowRightIcon } from '@heroicons/react/outline';
import TechIcon from './TechIcon.astro';
import { GitHubIcon } from '../icons/GitHubIcon.tsx';
const { kit } = Astro.props;
---

<div
  class="border bg-white dark:bg-slate-700 border-gray-200 dark:border-gray-700 rounded-lg group hover:bg-green-600 hover:dark:bg-green-600 transition-colors overflow-hidden"
>
  <div class="px-4 py-6 space-y-4">
    {kit.tech.map(({ name, Icon, tags }) => (
      <div class="flex items-center space-x-4">
        { Icon && <TechIcon {Icon} />}
        <div>
          <div class="text-lg text-gray-800 group-hover:text-gray-100 dark:text-gray-100 font-semibold">{name}</div>
          <div class="text-sm text-gray-500 group-hover:text-gray-200 dark:text-gray-400">{tags.join(', ')}</div>
        </div>
      </div>
    ))}
  </div>
  <div
    class="px-4 py-2.5 flex items-center justify-between border-t border-gray-100 dark:border-gray-700 dark:bg-slate-800 dark:bg-opacity-25 group-hover:bg-green-700 group-hover:bg-opacity-25 group-hover:border-green-600"
  >
    <a
      href={`/kit/${kit.name}`}
      class="inline-flex items-center justify-center text-gray-700 dark:text-gray-50 group-hover:text-gray-50 font-medium text-lg"
    >
      See Kit Details <ArrowRightIcon className="inline w-4 h-4 ml-2" />
    </a>
    <a
      href={`https://github.com/thisdot/starter.dev/tree/main/starters/${kit.name}`}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center py-2.5 px-4 rounded-lg border border-gray-200 dark:border-gray-600 group-hover:border-green-500 group-hover:bg-green-600"
      ><GitHubIcon
        size={22}
        className="text-gray-700 dark:text-gray-100 group-hover:text-white"
      /></a
    >
  </div>
</div>
