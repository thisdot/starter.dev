---
import TechIcon from './TechIcon.astro';
const { kit } = Astro.props;
---

<div
  class="grid justify-items-start bg dark:bg-gray-800 border border-gray-400 dark:border-gray-700 rounded-lg group group-hover:bg-brand-500 group-hover:dark:bg-brand-500 transition-colors overflow-hidden px-4"
>
<h2 class="text-lg font-bold ml-2 lg:ml-6 pt-6 h-14 t-dark dark:dark-t group-hover:text-white">{kit.name}</h2>
  <div class="grid grid-cols-4 gap-x-6 gap-y-2 grid-rows-3 lg:px-6 pt-4 pb-6 space-y-4 justify-items-center items-end">
    {kit.technologies.map(({ Icon }) => (
      <div>
        { Icon && <TechIcon {Icon} />}
      </div>
    ))}
  </div>
</div>
