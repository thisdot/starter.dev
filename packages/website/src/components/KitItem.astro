---
import TechIcon from './TechIcon.astro';
const { kit } = Astro.props;
// grid align-center
// grid-rows-4
---

<div
  class=" bg dark:bg-gray-800 border border-gray-400 dark:border-gray-700 rounded-lg group hover:bg-brand-500 hover:dark:bg-brand-500 transition-colors overflow-hidden max-w-[419px] max-h-[541px]"
>
<h2 class="text-2xl px-8 pt-6 t-light dark:dark-t group-hover:text-white min-h-[100px]">{kit.name}</h2>
  <div class="grid grid-cols-3 grid-rows-4 pt-2 pb-6 space-y-4 justify-items-center items-end">
    {kit.technologies.map(({  Icon }) => (
      <div>
        { Icon && <TechIcon {Icon} />}
      </div>
    ))}
  </div>
</div>
