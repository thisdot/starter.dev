---
import KitItem from './KitItem.astro';
const { kits } = Astro.props;
---

<div class="px-4 grid xl:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-6">
  {
    kits.map((kit) => (
      <div class="col-span-1">
        <a href={`/kits/${kit.name}`} class="group my-2">
          <KitItem kit={kit} />
        </a>
      </div>
    ))
  }
</div>
