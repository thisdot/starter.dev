---
import SelectTechIcon from '../icons/SelectTechIcon.astro';
import ReadDocIcon from '../icons/ReadDocIcon.astro';
import DownloadStackIcon from '../icons/DownloadStackIcon.astro';
---

<div class="text-center py-12">
  <div class="my-8 max-w-3xl mx-auto">
    <h2
      class="t-dark dark:dark-t-light heading-1 leading-[1.3] [word-spacing:4px] dark:text-gray-50"
    >
      Save your time using
      <span
        class="px-1 rounded-lg bg-blue-500 dark:bg-white text-white dark:text-slate-800"
        >configured</span
      >
      tech stacks
    </h2>
  </div>
  <div
    class="mt-20 border-t border-b border-gray-400 dark:border-gray-700 py-8 px-4"
  >
    <div
      class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-screen-2xl mx-auto text-xl font-medium"
    >
      <div class="col-span-1 flex items-center justify-center">
        <SelectTechIcon />
        <div class="ml-2">
          <div class="t-dark dark:dark-t">Select tech stack</div>
          <div class="t-light dark:text-gray-400">you're looking for</div>
        </div>
      </div>
      <div class="col-span-1 flex items-center justify-center">
        <ReadDocIcon />
        <div class="ml-2">
          <div class="t-dark dark:dark-t">See documentation</div>
          <div class="t-light dark:text-gray-400">about how it works</div>
        </div>
      </div>
      <div class="col-span-1 flex items-center justify-center">
        <DownloadStackIcon />
        <div class="ml-2">
          <div class="t-dark dark:dark-t">Download stack &</div>
          <div class="t-light dark:text-gray-400">build application</div>
        </div>
      </div>
    </div>
  </div>
</div>
