---
import SelectTechIcon from '../icons/SelectTechIcon.astro';
import ReadDocIcon from '../icons/ReadDocIcon.astro';
import DownloadStackIcon from '../icons/DownloadStackIcon.astro';
---

<div class="text-center py-12">
  <div class="my-8 max-w-3xl mx-auto">
    <h2
      class="t-dark dark:dark-t-light heading-1 leading-[1.3] [word-spacing:4px] dark:text-gray-50"
    >
      Save your time using
      <span
        class="px-1 rounded-lg bg-blue-500 dark:bg-white text-white dark:text-slate-800"
        >configured</span
      >
      tech stacks
    </h2>
  </div>
  <div
    class="mt-16 border-t border-b border-slate-200 dark:border-slate-700 py-8 px-4"
  >
    <div class="grid grid-cols-3 max-w-screen-2xl mx-auto">
      <div class="col-span-1">
        <SelectTechIcon />
      </div>
      <div class="col-span-1"><ReadDocIcon /></div>
      <div class="col-span-1"><DownloadStackIcon /></div>
    </div>
  </div>
</div>
