---
import Lottie from 'react-lottie-player';
import { Logo } from './Logo';
import { EllipseBg } from '../icons/EllipseBg';
import { HeroRectangleBg } from '../icons/HeroRectangleBg';
import ZshAnimation from './ZshAnimation';
---

<div class="text-center pt-12 bg-[#F5F7FF] dark:bg-[#21315C]">
  <div class="my-8 max-w-4xl mx-auto flex justify-center flex-col">
    <div class="self-center">
      <Logo />
    </div>
    <h2
      class="t-dark dark:dark-t-light heading-1 leading-[1.3] [word-spacing:4px] dark:text-gray-50 mt-3"
    >
      Bootstrap your projects with zero configuration
    </h2>
    <p
      class="text-[#4C5C87] text-[18px] leading-[176%] w-[408px] mt-[4px] font-[500] self-center max-w-[98%] dark:text-gray-400"
    >
      Have all the industry standard tooling at your fingertips in a matter of
      seconds!
    </p>
  </div>

  <div
    class="mt-[160px] sm:mb-0 mb-[135px] md:mt-[268px] mx-auto flex flex-col justify-center relative"
  >
    <div class="hidden sm:block">
      <EllipseBg className="bottom-0 absolute w-[100%]" />
      <HeroRectangleBg className="w-[100%]" />
    </div>

    <ZshAnimation client:only />
  </div>
</div>
