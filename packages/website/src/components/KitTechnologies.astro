---
import TechItem from './TechItem.astro';
const { technologies } = Astro.props;
---

<div class="py-24 max-w-screen-2xl mx-auto">
  <h1 class="heading-1 font-medium mb-8">Kits with these technologies</h1>
  <div class="not-prose flex flex-col md:flex-row flex-wrap gap-4">
    {technologies.map((tech) => (
      <a href={`/framework/${tech.key}`} class="group inline-block my-2">
        <TechItem {...tech} />
      </a>
    ))}
  </div>
</div>
