---
import { GitHubIcon } from '../icons/GitHubIcon.tsx';
import { REPO_URL } from '../config.tsx';
const { name } = Astro.props;
console.log(name)
---

<div class="not-prose t-dark dark:dark-t-light pt-4">
  <div
    class="flex flex-row items-center dark:bg-gray-800 dark:border-gray-700 mx-auto max-w-screen-2xl my-10 border border-solid border-brand-500 rounded-lg "
  >
    <div class="p-4 lg:px-8 lg:text-left flex-auto text-center">
      <h1 class="heading-5 mb-6">See how kit works on examples</h1>
      <a
        class="btn btn-primary text-sm t-dark"
        href={`${REPO_URL}/tree/main/starters/${name}`}
        >See live examples<GitHubIcon
          className="h-3.5 w-3.5 inline ml-2.5 mb-px"
        /></a
      >
    </div>
    <div class="hidden lg:flex h-full ml-auto">
      <img
        class="bg-cover h-full rounded-lg"
        src="../../public/TechList.png"
        alt="technology list"
      />
    </div>
  </div>
</div>
