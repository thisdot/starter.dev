{
  "name": "remix-gql-tailwind",
  "private": true,
  "description": "Remix, GQL and TailwindCSS",
  "keywords": [
    "remix",
    "graphql",
    "tailwind"
  ],
  "version": "0.1.0",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss ./styles/**/*.css styles --dir ./app/styles",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "npm run build:css -- --w",
    "postinstall": "remix setup node",
    "format": "prettier --write ./app",
    "start": "remix-serve build",
    "test": "jest",
    "storybook": "concurrently -n css,storybook -c cyan,magenta \"npm run dev:css\" \"start-storybook -p 6006\"",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "cross-env": "^7.0.3",
    "graphql-request": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@mdx-js/preact": "^2.0.0",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.19",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-plugin-storybook": "^0.5.7",
    "jest": "^27.5.1",
    "msw": "^0.39.1",
    "msw-storybook-addon": "^1.6.1",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "storybook-builder-vite": "^0.1.18",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  },
  "engines": {
    "node": ">=14"
  },
  "msw": {
    "workerDirectory": "public"
  }
}