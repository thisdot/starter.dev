{
  "name": "remix-gql-tailwind",
  "private": true,
  "description": "Remix, GQL and TailwindCSS",
  "keywords": [
    "remix",
    "graphql",
    "tailwind"
  ],
  "version": "0.1.0",
  "hasShowcase": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss ./styles/**/*.css styles --dir ./app/styles",
    "dev": "concurrently -n css,remix -c magenta,cyan \"npm run dev:css\" \"remix dev\"",
    "dev:css": "npm run build:css -- --w",
    "format": "prettier --write ./app",
    "start": "remix-serve build",
    "test": "jest",
    "storybook": "concurrently -n css,storybook -c cyan,magenta \"npm run dev:css\" \"start-storybook -p 6006\"",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@remix-run/node": "1.7.5",
    "@remix-run/react": "1.7.5",
    "@remix-run/serve": "1.7.5",
    "cross-env": "7.0.3",
    "graphql": "^16.6.0",
    "graphql-request": "5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@mdx-js/preact": "2.1.5",
    "@remix-run/dev": "1.7.5",
    "@remix-run/eslint-config": "1.7.5",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.5.13",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.2.2",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "autoprefixer": "10.4.13",
    "concurrently": "7.5.0",
    "eslint": "8.27.0",
    "eslint-plugin-storybook": "0.6.7",
    "eslint-plugin-unused-imports": "2.0.0",
    "jest": "29.3.0",
    "jest-environment-jsdom": "^29.3.0",
    "postcss": "8.4.18",
    "postcss-cli": "10.0.0",
    "prettier": "2.7.1",
    "storybook-builder-vite": "0.1.18",
    "tailwindcss": "3.2.2",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4",
    "vite": "3.2.3"
  },
  "engines": {
    "node": ">=14"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
